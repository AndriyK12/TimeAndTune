<Page x:Class="TimeAndTune.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeAndTune"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#25232A"
      Title="HomePage">
    <Grid>
        <Button
            Visibility="Visible"
            Margin="90,53,0,0"
            Width="90" Height="90"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderThickness="0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="IsHitTestVisible" Value="False" />
                </Style>
            </Button.Style>
            <Image Source="/Pages/menu_icon.png"
               Width="90" Height="90" 
               Visibility="Visible"/>
        </Button>
        <Rectangle 
            Grid.Row="0" Grid.Column="0" Panel.ZIndex="1"
            Fill="Transparent"
            RadiusX="12"
            RadiusY="12"
            Margin="0,60,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="282"
            Height="84"
            Stroke="#5FA6E7" 
            StrokeThickness="6"
            />
        <TextBlock 
            Grid.Row="0" Grid.Column="0" Panel.ZIndex="2"
            Visibility="Visible"
            Text="Home"
            Margin="906,77,906,953"
            Foreground="White"
            FontSize="37"
            />
        <Button
            Visibility="Visible"
            Background="Transparent"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Height="100"
            Width="100"
            Margin="0,60,90,0"
            BorderThickness="0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="IsHitTestVisible" Value="False" />
                </Style>
            </Button.Style>
            <Image HorizontalAlignment="Right"
               Height="100"
               Width="100" 
               Source="/Pages/user_image.png"
               Visibility="Visible"
            />
        </Button>
    </Grid>
</Page>
