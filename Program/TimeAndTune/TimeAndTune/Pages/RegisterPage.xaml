<Page x:Class="TimeAndTune.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeAndTune.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#25232A"
      Title="RegisterPage">

    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
        </Grid.LayoutTransform>
        <Rectangle 
            Fill="Transparent"
            RadiusX="12"
            RadiusY="12"
            Margin="0,60,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="367"
            Height="131"
            Stroke="#5FA6E7" 
            StrokeThickness="6"/>
        <TextBlock 
             VerticalAlignment="Top"
             HorizontalAlignment="Center"
             Text="Sign up"
             Margin="0,77,0,0"
             Foreground="White"
             FontSize="64"/>
        <TextBlock
            Text="Name:"
            Margin="0,322,1560,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Foreground="#FFFFFF"
            FontSize="32"/>
        <Border
            Margin="0,382,1000,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="720"
            Height="85"
            Background="#A6A3A3"
            CornerRadius="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBox
                    Name="txtName"
                    BorderThickness="0"
                    Background="Transparent"
                    Text=""
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Foreground="Black"
                    FontSize="32"
                    Width="720"
                    Height="85"
                    Margin="30,25,0,-15"
                    GotFocus="txtName_GotFocus"
                    LostFocus="txtName_LostFocus" TextChanged="txtName_TextChanged"/>
            </StackPanel>
        </Border>
        <TextBlock
            Text="Email:"
            Margin="0,488,1565,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Foreground="#FFFFFF"
            FontSize="32"/>
        <Border
            Margin="0,548,1000,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="720"
            Height="85"
            Background="#A6A3A3"
            CornerRadius="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBox
                    x:Name="txtEmail"
                    BorderThickness="0"
                    Background="Transparent"
                    Text=""
                    Foreground="Black"
                    FontSize="32"
                    Width="720"
                    Height="86"
                    Margin="25,22,0,0"
                    GotFocus="txtEmail_GotFocus"
                    LostFocus="txtEmail_LostFocus" TextChanged="txtEmail_TextChanged"/>
            </StackPanel>
        </Border>
        <TextBox
            Name="errorRegisterEmailInput"
            Text=""
            Margin="0,250,1435,0"
            Foreground="Red"
            Background="Transparent"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            BorderBrush="Transparent"
            FontSize="20"/>
        <TextBlock
            Text="Password:"
            Margin="460,322,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Foreground="#FFFFFF"
            FontSize="32"/>
        <Border
            Margin="975,382,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="720"
            Height="85"
            Background="#A6A3A3"
            CornerRadius="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <PasswordBox
                    Name="txtPassword"
                    BorderThickness="0"
                    Background="Transparent"
                    Password=""
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Foreground="Black"
                    FontSize="32"
                    Width="720"
                    Height="85"
                    Padding="20,20,0,0"
                    GotFocus="txtPassword_GotFocus"/>
                <TextBlock
                    Name="txtPasswordVisible"
                    Text=""
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Foreground="Black"
                    FontSize="32"
                    Width="400"
                    Height="40"
                    Padding="15,0,0,0"
                    Visibility="Collapsed"/>
            </StackPanel>
        </Border>
        <ToggleButton
             Name="btnShowPassword"
             Background="Transparent"
             Width="80"
             Height="40"
             VerticalAlignment="Top"
             HorizontalAlignment="Center"
             Margin="1600,405,0,0"
             Checked="btnShowPassword_Checked"
             Unchecked="btnShowPassword_Unchecked">
            <ToggleButton.Style>
                <Style TargetType="ToggleButton">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border Background="Transparent">
                                    <Image x:Name="passwordVisibility"
                                        Width="80"
                                        Height="60"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,0" 
                                        Source="/Pages/showPassword_image.png" >
                                    </Image>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
        <TextBlock
            Text="Confirm password:"
            Margin="580,488,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Foreground="#FFFFFF"
            FontSize="32"/>
        <Border
             Margin="975,548,0,0"
             VerticalAlignment="Top"
             HorizontalAlignment="Center"
             Width="720"
             Height="85"
             Background="#A6A3A3"
             CornerRadius="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <PasswordBox
                     Name="txtConfirmPassword"
                     BorderThickness="0"
                     Background="Transparent"
                     Password=""
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Foreground="#FFFFFF"
                     FontSize="32"
                     Width="720"
                     Height="85"
                     Padding="20,20,0,0"
                     GotFocus="txtConfirmPassword_GotFocus"/>
                <TextBlock
                     Name="txtConfirmPasswordVisible"
                     Text=""
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Foreground="Black"
                     FontSize="32"
                     Width="400"
                     Height="40"
                     Padding="15,0,0,0"
                     Visibility="Collapsed"/>
            </StackPanel>
        </Border>
        <TextBox
            Name="errorRegisterPasswordsDontMatch"
            Text=""
            Margin="1180,275,0,0"
            Foreground="Red"
            Background="Transparent"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            BorderBrush="Transparent"
            FontSize="20"/>
        <TextBox
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Name="errorRegisterAllFields"
            Text=""
            Margin="0,700,0,0"
            Foreground="Red"
            Background="Transparent"
            BorderBrush="Transparent"
            FontSize="20"/>
        <ToggleButton
            Name="btnShowConfirmPassword"
            Width="80"
            Height="40"
            Background="Transparent"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Margin="1600,571,0,0"
            Checked="btnShowConfirmPassword_Checked"
            Unchecked="btnShowConfirmPassword_Unchecked">
            <ToggleButton.Style>
                <Style TargetType="ToggleButton">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border Background="Transparent">
                                    <Image 
                                        x:Name="confPasswordVisibility"
                                        Width="80"
                                        Height="60"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,0" 
                                        Source="/Pages/showPassword_image.png">
                                    </Image>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
        <Rectangle
            RadiusX="15"
            RadiusY="15"
            Margin="0,795,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="342" Height="112"
            Fill="#1C4335"
            Stroke="#FFFFFF"
            StrokeThickness="3"/>
        <TextBlock 
             VerticalAlignment="Top"
             HorizontalAlignment="Center"
             Text="Sign up"
             Margin="0,815,0,0"
             Foreground="White"
             FontSize="48"/>
        <Button
            Margin="0,795,0,0"
            Width="367" Height="112"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Click="SighUp_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border Background="Transparent">
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <TextBlock
            Margin="0,920,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Foreground="White"
            FontSize="48"
            TextAlignment="Center">
            <Run Text="Already have an account?" />
            <LineBreak />
            <Run Text="Sign in" />
        </TextBlock>
        <Button
            Margin="0,920,0,0"
            Width="540" Height="120"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Click="onSignIn_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border Background="Transparent">
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Page>
